<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/reward_image_view"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:scaleY="0.5"
        android:clickable="true"
        android:background="@drawable/ic_card_giftcard_white_24dp"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/reward_count_textview"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/reward_image_view"
        android:layout_alignRight="@id/reward_image_view"
        android:layout_alignEnd="@id/reward_image_view"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:background="@drawable/badge_circle" />

</RelativeLayout>
